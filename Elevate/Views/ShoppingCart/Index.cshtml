@model Elevate.BL.Models.ShoppingCart

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.ActionLink("Remove", "Remove", new { id = item.Id })
                </td>
            </tr>
        }
        <tr></tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <td>
                @Html.DisplayFor(modelItem => Model.SubTotal)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tax)
            </th>
            <td>
                @Html.DisplayFor(modelItem => Model.Tax)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <td>
                @Html.DisplayFor(modelItem => Model.Total)
            </td>
        </tr>
    </tbody>

</table>
<a class="btn btn-sm btn-primary m-2" asp-action="Checkout">Checkout</a>


