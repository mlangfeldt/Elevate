@model Elevate.BL.Models.ShoppingCart

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="checkout-container">
    <h2 class="checkout-title">Your Shopping Cart</h2>

    <div class="cart-items">
        @foreach (var item in Model.Items)
        {
            <div class="cart-item">
                <div class="item-details">
                    <h4 class="item-name">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <p class="item-description">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
                <div class="item-cost">
                    <span>@String.Format("{0:C}", item.Cost)</span>
                </div>
                <div class="item-remove">
                    @Html.ActionLink("Remove", "Remove", new { id = item.Id }, new { @class = "remove-link" })
                </div>
            </div>
        }
    </div>

    <div class="cart-summary">
        <div class="summary-row">
            <span>Subtotal</span>
            <span>@String.Format("{0:C}", Model.SubTotal)</span>
        </div>
        <div class="summary-row">
            <span>Tax</span>
            <span>@String.Format("{0:C}", Model.Tax)</span>
        </div>
        <div class="summary-row total">
            <span>Total</span>
            <span>@String.Format("{0:C}", Model.Total)</span>
        </div>
    </div>

    <a class="checkout-button" asp-action="Checkout">Proceed to Checkout</a>
</div>

