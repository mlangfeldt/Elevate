@model List<Elevate.BL.Models.Course>

@{
    ViewData["Title"] = "My Library";
}

<div class="container mt-4">
    <h1 class="text-center" style="font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-weight: 600; color: #333;">My Library</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row justify-content-center">
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm" style="border-radius: 15px; overflow: hidden;">
                        <img src="~/images/@course.ImgUrl" alt="@course.Name" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body" style="background-color: #f9f9f9;">
                            <h5 class="card-title" style="font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-weight: 500; color: #555;">@course.Name</h5>
                            <p class="card-text" style="font-size: 14px; color: #777;">@course.Description</p>
                            <p class="card-text" style="font-size: 14px; color: #888;">Cost: <span style="font-weight: 600;">@course.Cost.ToString("C")</span></p>
                            <a href="/Courses/CourseDetails/@course.Id" class="btn btn-light shadow-sm" style="font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-weight: 500; color: #007aff; border: 1px solid #007aff;">View Course</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center" style="font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 18px; color: #777;">You don't own any courses yet. Start exploring!</p>
    }
</div>

<style>
    body {
        background-color: #f5f5f7; /* Light gray background for a clean look */
    }

    .btn-light:hover {
        background-color: #007aff; /* Apple-style blue hover */
        color: white; /* White text on hover */
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02); /* Slight zoom effect */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1); /* Slight shadow effect */
        }
</style>
