@{
    ViewData["Title"] = "Home Page";
}



<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <header>
            <div class="container text-center my-5">
                <h1>Welcome to Elevate</h1>
                <p>Explore our featured courses and learn more about financial planning and investment.</p>
                @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Message"]
                    </div>
                }
            </div>
        </header>

        <!-- Card Section -->
        <section class="py-5">
            <div class="container">
                <div class="row gx-5">
                    <!-- Card 1 -->
                    <div class="col-lg-3 mb-5">
                        <div class="card d-flex flex-column">
                            <a href="@Url.Action("DebtManagement", "Home")">
                                <img class="card-img-top image-pop" src="~/images/debt.jpg" alt="Debt Management" style="width: 100%; height: auto;" />
                            </a>
                            <div class="card-body p-4">
                                <a class="text-decoration-none link-dark stretched-link" href="@Url.Action("DebtManagement", "Home")">
                                    <h5 class="card-title mb-3">Debt Management</h5>
                                </a>
                                <p class="card-text mb-0">Strategies for managing and reducing debt.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Card 2 -->
                    <div class="col-lg-3 mb-5">
                        <div class="card d-flex flex-column">
                            <a href="@Url.Action("Budgeting", "Home")">
                                <img class="image-pop" src="~/images/budget.jpg" alt="Budgeting" style="width: 100%; height: auto;" />
                            </a>
                            <div class="card-body p-4">
                                <a class="text-decoration-none link-dark stretched-link" href="@Url.Action("Budgeting", "Home")">
                                    <h5 class="card-title mb-3">Budgeting</h5>
                                </a>
                                <p class="card-text mb-0">Master budgeting to control finances.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Card 3 -->
                    <div class="col-lg-3 mb-5">
                        <div class="card d-flex flex-column">
                            <a href="@Url.Action("Investment", "Home")">
                                <img class="image-pop" src="~/images/invest.jpg" alt="Investment" style="width: 100%; height: auto;" />
                            </a>
                            <div class="card-body p-4">
                                <a class="text-decoration-none link-dark stretched-link" href="@Url.Action("Investment", "Home")">
                                    <h5 class="card-title mb-3">Investment</h5>
                                </a>
                                <p class="card-text mb-0">Essential strategies for building wealth.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Card 4 -->
                    <div class="col-lg-3 mb-5">
                        <div class="card d-flex flex-column">
                            <a href="@Url.Action("Retirement", "Home")">
                                <img class="image-pop" src="~/images/retire.jpg" alt="Retirement" style="width: 100%; height: auto;" />
                            </a>
                            <div class="card-body p-4">
                                <a class="text-decoration-none link-dark stretched-link" href="@Url.Action("Retirement", "Home")">
                                    <h5 class="card-title mb-3">Retirement</h5>
                                </a>
                                <p class="card-text mb-0">Create a sustainable retirement plan.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Call to action -->
        <aside class="bg-primary bg-gradient rounded-3 p-4 p-sm-5 mt-5 mb-4">
            <div class="d-flex align-items-center justify-content-between flex-column flex-xl-row text-center text-xl-start">
                <div class="mb-4 mb-xl-0">
                    <div class="fs-3 fw-bold text-white">Stay updated on new courses!</div>
                    <div class="text-white-50">Sign up for our newsletter to receive the latest course updates and offerings.</div>
                </div>
                <div class="ms-xl-4">
                    <div class="input-group mb-2">
                        <input class="form-control" type="text" placeholder="Email address..." aria-label="Email address..." aria-describedby="button-newsletter" />
                        <button class="btn btn-outline-light" id="button-newsletter" type="button">Sign up</button>
                    </div>
                    <div class="small text-white-50">We care about privacy, and will never share your data.</div>
                </div>
            </div>
        </aside>
    </main>
    <!-- Footer-->
    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; Elevate 2024</div></div>
                <div class="col-auto">
                    <a class="link-light small" href="#!">Privacy</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Terms</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
